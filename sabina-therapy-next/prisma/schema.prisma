generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  DOCTOR
  USER
}

enum Locale {
  en
  ar
}

enum Location {
  AMMAN
  IRBID
  ZARQA
  ONLINE
}

enum Specialty {
  THERAPY
  PSYCHIATRY
  COUNSELING
  CHILD_THERAPY
  FAMILY_THERAPY
  CBT
}

enum AppointmentStatus {
  REQUESTED
  CONFIRMED
  CANCELED
  COMPLETED
}

enum AdminActionType {
  APPROVE_DOCTOR
  DENY_DOCTOR
  APPOINTMENT_OVERRIDE
}

model User {
  id            String        @id @default(uuid())
  name          String
  email         String        @unique
  passwordHash  String
  role          Role          @default(USER)
  locale        Locale        @default(en)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  doctor        Doctor?
  appointments  Appointment[] @relation("PatientAppointments")
  adminActions  AdminAction[] @relation("AdminActor")
  reviews       Review[]

  // NextAuth adapter models
  accounts      Account[]
  sessions      Session[]
}

model Doctor {
  id              String               @id @default(uuid())
  userId           String               @unique
  slug             String               @unique
  specialty        Specialty
  bio              String
  languages        String[]
  location         Location
  fees             Int
  photoUrl         String
  isTopDoctor      Boolean              @default(false)
  isApproved       Boolean              @default(false)
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  user             User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  verification     DoctorVerification?
  scheduleSlots    DoctorScheduleSlot[]
  appointments     Appointment[]
  reviews          Review[]

  @@index([location])
  @@index([specialty])
  @@index([fees])
}

model DoctorVerification {
  id                String   @id @default(uuid())
  doctorId           String   @unique
  licenseNumber      String
  verificationBadge  Boolean  @default(true)
  verifiedAt         DateTime?
  createdAt          DateTime @default(now())
  doctor             Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)
}

model DoctorScheduleSlot {
  id            String       @id @default(uuid())
  doctorId      String
  startAt       DateTime
  endAt         DateTime
  isBooked      Boolean      @default(false)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  doctor        Doctor       @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  appointment   Appointment?

  @@unique([doctorId, startAt])
  @@index([doctorId, isBooked, startAt])
}

model Appointment {
  id            String             @id @default(uuid())
  patientId     String
  doctorId      String
  slotId        String             @unique
  startAt       DateTime
  endAt         DateTime
  status        AppointmentStatus  @default(REQUESTED)
  contactEmail  String?
  notes         String?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  patient       User               @relation("PatientAppointments", fields: [patientId], references: [id], onDelete: Cascade)
  doctor        Doctor             @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  slot          DoctorScheduleSlot @relation(fields: [slotId], references: [id], onDelete: Restrict)
  zoomMeeting   ZoomMeeting?
  review        Review?

  @@index([patientId, startAt])
  @@index([doctorId, startAt])
  @@index([status])
}

model ZoomMeeting {
  id              String      @id @default(uuid())
  appointmentId   String      @unique
  zoomMeetingId   String
  zoomJoinUrl     String
  zoomStartUrl    String
  provider        String
  createdAt       DateTime    @default(now())
  appointment     Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
}

model Review {
  id              String      @id @default(uuid())
  appointmentId   String      @unique
  userId          String
  doctorId        String
  rating          Int
  comment         String?
  createdAt       DateTime    @default(now())
  appointment     Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  doctor          Doctor      @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId, rating])
}

model AdminAction {
  id              String          @id @default(uuid())
  adminId          String
  actionType       AdminActionType
  targetId         String
  notes            String?
  createdAt        DateTime        @default(now())
  admin            User            @relation("AdminActor", fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId, createdAt])
}

// NextAuth required tables for PrismaAdapter
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
